
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Product> list_pro = ViewBag.data;
}

<div class="center_content">
    @foreach (var pro in list_pro)
    {
        <div class="prod_box">
            <div class="top_prod_box"></div>
            <div class="center_prod_box">
                <div class="product_title"><a href="details.html">@pro.Name</a></div>
                <div class="product_img"><a href="details.html"><img src="~/Content/_User/images/@pro.Image" alt="" border="0" /></a></div>
                <div class="prod_price"><span class="reduce">350$</span> <span class="price">@pro.UnitPrice$</span></div>
            </div>
            <div class="bottom_prod_box"></div>
            <div class="prod_details_tab">
                <a href="@Url.Action("Add", "Cart", new { id = pro.Id, strUrl = Request.Url.ToString() })" title="header=[Add to cart] body=[&nbsp;] fade=[on]">
                    <img src="~/Content/_User/images/cart.gif" alt="" border="0" class="left_bt" />
                </a>
                <a href="#" title="header=[Specials] body=[&nbsp;] fade=[on]">
                    <img src="~/Content/_User/images/favs.gif" alt="" border="0" class="left_bt" />
                </a>
                <a href="#" title="header=[Gifts] body=[&nbsp;] fade=[on]">
                    <img src="~/Content/_User/images/favorites.gif" alt="" border="0" class="left_bt" />
                </a> <a href="details.html" class="prod_details">details</a>
            </div>
        </div>
    }
</div>