@using WebApplication3
@{ 
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Admin_LayoutView.cshtml";

}
<div class="center_content" style="width:100%;">
    <div class="center_title_bar">Category Information </div>
    <br />
    <br />
    <br />
    <div>
        @using (Html.BeginForm("Add", "Admin_Categorys", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table width="100%">
                <tr>
                    <td width="20%">
                        Name: 
                    </td>
                    <td width="80%">
                        @Html.TextBox("txtName")
                    </td>
                </tr>
                <tr>
                    <td width="20%">
                        NameVN:
                    </td>
                    <td width="80%">
                        @Html.TextBox("txtNameVN")
                    </td>
                </tr>
                
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Add a new product" />
                    </td>
                </tr>

            </table>
        }
    </div>
</div>