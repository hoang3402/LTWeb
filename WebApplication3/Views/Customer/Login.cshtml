@model CPT.Models.Customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutResigner_Login.cshtml";
}



<div style="padding-block: 50px">
    <h3 style="text-align: center; color:red;">@ViewBag.ThongBao</h3>
    <h2 style="text-align: center">LOGIN</h2>
    <table align="center">

        @using (Html.BeginForm())
        {

            @Html.ValidationSummary(true)
            <tr style="height: 40px">
                <td>Email</td>
                <td>
                    @Html.TextBox("Email")
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height: 40px">
                <td>Password</td>
                <td>
                    @Html.Password("Password")
                    @ViewData["Loi3"]
                </td>
            </tr>
            <tr style="height: 40px">
                <td></td>
                <td>
                    <input type="submit" name="dk" value="Đăng Nhập" />
                </td>
            </tr>
        }

    </table>
</div>